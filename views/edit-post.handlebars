<article>
    <a href="/dashboard">Back to Dashboard</a>
    <h2>Edit Post</h2>

    <form class="edit-post-form">
        <div class="mb-3">
            <label for="post-title">Title:</label>
            <input type="text" id ="post-title" name="post-title" value="{{post.title}}" />
        </div>
        <div class="mb-3">
            <label for="post-body">Post:</label>
            <input type="text" id="post-body" name="post-body" value="{{post.post_body}}" />
        </div>
        <div class="mb-3 row">
            <div class="col">
                <button type="submit" class="edit-post-btn btn btn-primary">Edit Post</button>
            </div>
            <div class="col">
                <button type="submit" class="delete-post-btn btn btn-primary">Delete Post</button>
            </div>
        </div>
    </form>
</article>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>