<article id="post" class="card">
    <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <h6 class="card-subtitle mb-2 muted">Created by {{user.username}} on {{created_at}} | {{comments.length}} Comments</h6>
        <p class="card-text">{{post_body}}</p>
    </div>
</article>